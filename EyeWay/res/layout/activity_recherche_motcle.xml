<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_margin="1dp"
            android:src="@drawable/menu_recherche_par_mot_clef"
            android:contentDescription="@string/descriptionImagePopPup" />

        <TextView
            android:id="@+id/titre_recherche_perimetre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/titre_recherche_motCle"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!-- Impossible de definir une max width en pourcentage de la width totale ... -->

        <EditText
            android:id="@+id/motcle"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:hint="@string/text_motCle"
            android:inputType="textAutoComplete" 
            android:layout_margin="1dp"

            android:layout_gravity="center_horizontal"
            >
        </EditText>

 
    </LinearLayout>

</LinearLayout>