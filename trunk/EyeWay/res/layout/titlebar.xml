<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ligneLogo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item1"
    android:gravity="center_horizontal">
    
    

    <TextView
        android:id="@+id/eyeWayTitle"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="@string/app_name" />
	<ImageView
	    
        android:id="@+id/eyeWayLogo"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:padding="1dip"
        android:layout_toLeftOf="@id/eyeWayTitle"
        android:src="@drawable/eyeway3" 
        android:contentDescription="@string/logoApli"/>
</RelativeLayout>